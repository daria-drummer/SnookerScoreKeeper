<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#2E7D32" />
                <gradient android:angle="-90" android:startColor="#2E7D32" android:endColor="#81C784"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#2E7D32" />
                <solid android:color="#1B5E20"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="3dip" />
                <stroke android:width="1dip" android:color="#2E7D32" />
                <gradient android:angle="-90" android:startColor="#81C784" android:endColor="#2E7D32" />
            </shape>
        </item>
    </selector>




